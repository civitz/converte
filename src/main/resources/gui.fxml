<?xml version="1.0" encoding="UTF-8" ?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.cell.PropertyValueFactory ?>

<GridPane fx:controller="converte.GuiController" xmlns:fx="http://javafx.com/fxml"
alignment="center"  hgap="10" vgap="10">
	<padding>
		<Insets top="25" right="25" bottom="10" left="25" />
	</padding>
	<Button fx:id="convertButton" text="Convert"
		GridPane.columnIndex="0" GridPane.rowIndex="0" onAction="#convertAction" />
	<ProgressBar fx:id="progress" GridPane.columnIndex="0"
		GridPane.rowIndex="1" disable="true" progress="0"/>
	<Text fx:id="actiontarget" text="waiting for button press"
		GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <Label text="Files"
        GridPane.columnIndex="0" GridPane.rowIndex="3">
    </Label>
	<TableView fx:id="tableView" GridPane.columnIndex="0"
		GridPane.rowIndex="4" onDragDropped="#listDropped" onDragOver="#listDragOver">
		<columns>
			<TableColumn text="Name" fx:id="name">
				<cellValueFactory>
					<PropertyValueFactory property="name" />
				</cellValueFactory>
			</TableColumn>
			<TableColumn text="Path">
				<cellValueFactory>
					<PropertyValueFactory property="filename" />
				</cellValueFactory>
			</TableColumn>
			<TableColumn text="Progress">
				<cellValueFactory>
					<PropertyValueFactory property="progress" />
				</cellValueFactory>
			</TableColumn>
			<TableColumn text="Details">
				<cellValueFactory>
					<PropertyValueFactory property="details" />
				</cellValueFactory>
			</TableColumn>
		</columns>
	</TableView>
</GridPane>